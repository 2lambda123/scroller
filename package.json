{
  "name": "prokrutchik",
  "version": "3.0.0",
  "description": "Draggable content scroller.",
  "keywords": [
    "scroller",
    "scroll",
    "drag",
    "drag-n-drop"
  ],
  "type": "module",
  "types": "scroller.d.ts",
  "exports": {
    ".": "./scroller.js",
    "./package.json": "./package.json",
    "./scroller.browser.js": "./scroller.browser.js",
    "./scroller.css": "./scroller.css"
  },
  "files": [
    "scroller.js",
    "scroller.browser.js",
    "scroller.css",
    "scroller.d.ts"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "author": "Alex Bespoyasov <bespoyasov@me.com>",
  "repository": "bespoyasov/scroller",
  "license": "ISC",
  "scripts": {
    "lint": "npx eslint src/**",
    "prebuild": "npm run lint",
    "build": "npm run build:module && npm run build:browser",
    "build:module": "npx swc src -C module.type=es6 -o scroller.js",
    "build:browser": "npx swc src -C module.type=umd -o scroller.browser.js"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.187",
    "eslint": "^8.15.0"
  }
}
